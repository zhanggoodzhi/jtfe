extends /layout/primary.pug

block mainbody
  .login-wrapper
    .login-box
      .login-box-header
        h1 智能机器人云平台
      .login-box-body
        form#login-form(method="post",action="${ctx}/logon")
          .input-groups
            .input-wrapper
              input(name="username",type="text",placeholder="账号")
            .input-wrapper
              input(name="password",type="password",placeholder="密码")
            .input-wrapper.code-input
              input(name="yzcode",type="text",placeholder="验证码",maxlength="4")
              .code-wrapper
                img#code-img(src!="${ctx}/ValidateCodeImage?<%=System.currentTimeMillis()%>",alt="验证码",title="点击刷新验证码")
          c:if(test="${param.errorMessage != null}")
            .error-wrapper
              .error-text <%=java.net.URLDecoder.decode(request.getParameter("errorMessage"), "UTF-8")%>
          .button-wrapper
            button(type="submit") 登录
          .link-wrapper
            a.reset-link(href="${ctx}/register/resetPwd") 无法登录
