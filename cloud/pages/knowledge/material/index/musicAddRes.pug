main.resource-detail-main
  .add-music-res.col-lg-9.col-md-9.col-sm-9
    form.form-horizontal
      .form-group
        label.cloud-input-title.title-width 歌曲名
        .cloud-input-content
          input#song.input-sm.form-control(type="text",placeholder="请输入歌曲名称")
      .form-group
        label.cloud-input-title.title-width 歌手（选填）
        .cloud-input-content
          input#singer.input-sm.form-control(type="text",placeholder="请输入歌手名称")
      .form-group
        label.cloud-input-title.title-width 专辑（选填）
        .cloud-input-content
          input#album.input-sm.form-control(type="text",placeholder="请输入专辑名称")
      .form-group.clearfix.special
        label.cloud-input-title.title-width 歌曲
        .cloud-input-content
          a.btn.btn-primary.btn-sm.file(href='javascript:;') 上传音乐
            input#upload-music(type='file',accept='audio/mid,audio/midi,audio/oga,audio/wav,audio/mp3',title='点击上传音乐')
          span(style='color:#9e9e9e;font-size:13px;')
      .music-show
    .btn-wrap
      button.music-save.btn.btn-primary.btn-sm(type='button') 保存
  .resource-right-gray.col-lg-3.col-md-3.col-sm-3
    .row.right-sider
      .col-xs-12.right-innerBox
        .card
          .card-content
            .title-preview 标题
          .card-image
          .card-content
            .desc-preview 简介










