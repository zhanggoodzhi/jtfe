.clearfix.news-sidebar
  .col-xs-3.sidebar-column
    .news-group-wrap
      #news-group.news-group
      #remove-news.remove-news.hidden.alert-danger
        .remove-text 移动到此处删除
      #add-empty-news.add-empty-news
        span.add-icon
        span 继续添加
    .new-template-wrap
      ul.nav.nav-tabs
        //- li.active(role="presentation")
        //-   a(href="#news-template-title",role="tab",data-toggle="tab") 标题
        li.active(role="presentation")
          a(href="#news-template-title",role="tab",data-toggle="tab") 标题
        li(role="presentation")
          a(href="#news-template-sep",role="tab",data-toggle="tab") 分隔符
      #news-template-tab.news-template-tab.tab-content
        #news-template-title.tab-pane.active.fade.in(role="tabpanel")
          ul
            li.news-template-group
              h2 点击模板会插入到编辑器中
              br
            li.news-template-group
              h2
                span(style={
                      'display':'inline-block',
                      'padding': '0.3em 0.5em',
                      'border-radius': '0.5em',
                      'color': 'rgb(255, 255, 255)',
                      'font-size': '1em',
                      'box-shadow': 'rgb(165, 165, 165) 0.2em 0.2em 0.1em',
                      'background-color': 'rgb(249, 110, 87)',
                      'border-color': 'rgb(249, 110, 87)'
                }) 请输入标题
              br
        #news-template-sep.tab-pane.fade(role="tabpanel")
          ul
            li.news-template-group
              hr(style={
                'border-top':'1px dashed #ccc',
                'margin':'1.5rem 0',
              })
              br
            li.news-template-group
              hr(style={
                'border-top':'1px dotted #ccc',
                'margin':'1.5rem 0',
              })
              br
            li.news-template-group
              hr(style={
                'border-top':'1px solid #ccc',
                'margin':'1.5rem 0',
              })
              br
            li.news-template-group
              hr(style={
                'border-top':'2px solid #ccc',
                'border-bottom':'2px solid #ccc',
                'height':'1rem',
                'margin':'1.5rem 0',
              })
              br

  .col-xs-6.sidebar-column
    form
      .form-group
        input#news-sidebar-title.input-sm.form-control(type="text",maxlength="64",placeholder="请输入标题，不得超过64字")
      //- .form-group
      //-   input#news-sidebar-auth.input-sm.form-control(type="text",placeholder="请输入作者姓名")
      //- .form-group
        input#news-sidebar-url.input-sm.form-control(type="url",placeholder="请输入原文链接")
      .form-group
        label 封面图片
        .select-cover-wrap
          #news-sidebar-cover.upload-cover
            input#news-upload-btn(type='file',accept=".jpg,.png")
        p.text-center 推荐尺寸：900像素 * 500像素
      .form-group
        .group-header
          label 正文
          button#toggle-type.btn.btn-sm.btn-primary.pull-right(type="button") 链接到网页
        input#link-type.hidden.link-type.input-sm.form-control(type="text",placeholder="http://")
        .outer
          div#editor-type.editor-type
      .form-group
        label 摘要
        textarea#news-sidebar-summary.input-sm.form-control(maxlength="120",placeholder="请输入摘要内容，不超过120字")
      .form-group.text-center
        button#news-sidebar-save.btn.btn-success(type="button") 保存
        button#news-sidebar-cancel.btn.btn-default(type="button") 取消
  #news-asset-column.col-xs-3.sidebar-column
    #news-asset-wrap.news-asset-wrap
      ul.nav.nav-tabs
        li.active(role="presentation")
          a(href="#news-asset-pic",role="tab",data-toggle="tab") 图片
      .tab-content
        #news-asset-pic.tab-pane.active.fade.in(role="tabpanel")
          .text-left
            button.weixin-add-btn.btn.btn-primary.btn-sm(id=name+"-add-btn",type='button')
              span 上传图片
              input#news-image-upload-btn(type='file',accept=".jpg,.png")
          ul#news-asset-pic-contariner.news-asset-pic-contariner

