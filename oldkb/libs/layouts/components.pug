mixin tab(text,name)
  li.tab
    a(href="#"+name+"-tab",id=name+"-link")&attributes(attributes)= text

mixin btn(text,size,flat)
  a.waves-effect(class="btn-"+(size?size:"small")+" "+ (flat?"btn-flat":"btn"))&attributes(attributes)!= text

mixin input(size)
  .col.input-field(class="s"+size)
    input.input-small&attributes(attributes)

mixin select(size,options,placeholder)
  .col.input-field(class="s"+size)
    select.select-small
      option(value="",disabled,selected)= placeholder
      each option in options
        option(value=option.value)= option.name

